ul {
    padding:0px;
    list-style:none;
    margin-top:50px;
    
    li.popular_modules {
        display:inline-block;
        width:33.3333333%;
        float:left;
        height:75px;
        background-color:#CCCCCC;
        border:1px solid #000000;
        box-sizing:border-box;
        
        position:relative;

        label {
            width:100%;
            height:100%;
            display:block;
        }
        
        label:hover {
            background-color:#DCDCDC;
            cursor:pointer;
        }
        
        label.added-module {
            background-color:white;
        }

        a {
            width:auto;
            height:30px;
            line-height:30px;
            text-decoration:none;
            color:#000000;
            font-size:1.3em;
            text-align:center;
        }
        
        input[type=checkbox] {
            position: absolute;
            top:0;
            left:-10000px;
            height:30px;
        }
        
        p {
            margin:0px;
        }
    }
    
    li.popular_modules:nth-child(3)::after {
        content:"";
        display:block;
    }
    li.popular_modules:hover {
        background-color:#DCDCDC;
    }
}




